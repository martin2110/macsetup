# Git configuration - Generated by macOS setup

[user]
    # Set your name and email
    name = {{ git_user_name | default("Your Name") }}
    email = {{ git_user_email | default("your.email@example.com") }}

[init]
    defaultBranch = main

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RFX

[push]
    default = simple
    autoSetupRemote = true

[pull]
    rebase = true

[rebase]
    autoStash = true

[merge]
    tool = nvim
    conflictstyle = diff3

[diff]
    tool = nvim
    colorMoved = zebra

[status]
    showUntrackedFiles = all

[log]
    decorate = short

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    # Basic aliases
    st = status
    ci = commit
    co = checkout
    br = branch
    df = diff
    dc = diff --cached

    # Log aliases
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lga = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all

    # Useful shortcuts
    unstage = reset HEAD --
    last = log -1 HEAD
    uncommit = reset --soft HEAD~1
    recommit = commit --amend --no-edit

    # Branch management
    cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"

    # Stash shortcuts
    save = stash push -m
    pop = stash pop

    # Show tracked files
    tracked = ls-tree -r main --name-only

[credential]
    helper = osxkeychain

[diff-so-fancy]
    markEmptyLines = false
    changeHunkIndicators = false
    stripLeadingSymbols = false
    useUnicodeRuler = false

[interactive]
    diffFilter = diff-so-fancy --patch